@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model long
<div class="modal-dialog modal-xl">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@Localizer["Title"]: @Model</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">x</button>
        </div>
        <div class="modal-body">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <div class="list-group min-vh-100 pre-scrollable" id="conversations" style="height:100%;"></div>
                        </div>
                        <div class="col-10" id="messages_part">
                            <ul class="pagination pagination-sm">
                                <li class="page-item" id="prev-page"><a class="page-link" href="#">@Localizer["Previous"]</a></li>
                                <li class="page-item"><a class="page-link" id="current-page-link">1</a></li>
                                <li class="page-item" id="next-page"><a class="page-link" href="#">@Localizer["Next"]</a></li>
                            </ul>
                            <div class="list-group min-vh-100 pre-scrollable" id="messages" style="height:100%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    getConversations(new BigNumber(@(Html.Raw($"'{Model.ToString()}'"))));
</script>